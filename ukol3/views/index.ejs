<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>

    <table>
      <tr>
        <th>Text</th>
        <th>Hotovo</th>
      </tr>

      <% for (const todo of todos) { %>
        <tr>
          <td><%= todo.text %></td>
          <td><%= todo.done ? 'ano' : 'ne' %></td>
          <td>
            <form action="/toggle/<%= todo.id %>" method="POST">
              <button type="submit">zmenit</button>
            </form>
          </td>
        </tr>
      <% } %>
    </table>
  </body>
</html>