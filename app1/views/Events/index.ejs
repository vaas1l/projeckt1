<!DOCTYPE html>
<html lang="en">
    <%-include('../components/_head') %>
<body class="event-stranka">
    <header class="header">
        <div class="header-content">
            <a href="../" class="logo">
                <img src="assets/foto/pngwing.com.png" alt="Logo">
                <span class="site-name">Minecraft</span>
            </a>
            <button class="menu-toggle" id="menuToggle">
                <span class="hamburger"></span>
            </button>
        </div>
        <%-include('../components/_links') %>
    </header>

    <!-- Events Timeline -->
    <section class="events">
        <h2 class="events-text-h2">Upcoming Events</h2>
        <div class="events-list">
            <div class="event-card">
                <img src="../assets/foto/minecraft-fight-2560-x-1406-wallpaper-pjq9ti010jefgrqg.jpg" alt="Tournament 1">
                <h3>"Big Battle" Tournament</h3>
                <p>January 15, 2024</p>
                <a href="#details" class="btn">Learn More</a>
            </div>
            <div class="event-card">
                <img src="../assets/foto/Minecraft Fan Meetup.jpg" alt="Fan Meetup">
                <h3>Minecraft Fan Meetup</h3>
                <p>January 25, 2024</p>
                <a href="#details" class="btn">Learn More</a>
            </div>
        </div>
    </section>

    <!-- Registration Section -->
    <section id="registration" class="registration">
        <h2>Register for Events</h2>
        <form>
            <label for="name">Your Name:</label>
            <input type="text" id="name" placeholder="Enter your name" required>
            
            <label for="email">Your Email:</label>
            <input type="email" id="email" placeholder="Enter your email" required>
            
            <label for="event">Select Event:</label>
            <select id="event" required>
                <option value="battle">"Big Battle" Tournament</option>
                <option value="meetup">Minecraft Fan Meetup</option>
            </select>
            
            <button type="submit" class="btn">Register</button>
        </form>
    </section>

    <footer>
        <p>Všechna práva vyhrazena &copy; 2024 MyWebsite</p>
        <ul class="footer-links">
            <li><a href="/Games">Games</a></li>
            <li><a href="/Shop">Shop</a></li>
            <li><a href="/Services">Services</a></li>
            <li><a href="/contact">Contact</a></li>
            <li><a href="/Events">Events</a></li>
        </ul>
        <ul class="social-links">
         <li><a href="https://facebook.com" target="_blank"><i class="fab fa-facebook"></i></a></li>
         <li><a href="https://twitter.com" target="_blank"><i class="fab fa-twitter"></i></a></li>
         <li><a href="https://instagram.com" target="_blank"><i class="fab fa-instagram"></i></a></li>
        </ul>
    </footer>
    <script src="../assets/js/main.js"></script>
</body>
</html>